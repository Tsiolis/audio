<div class="product-features">
	<div class="features-text">
	<h3> {{ section.settings.heading }} </h3>
	<p class="p-text feature-p-1">
		{{ section.settings.features_text }} 
	</p>
	<p class="p-text">
		{{ section.settings.features_text_2 }} 
	</p>
</div>
<div class="in-the-box">
	<h3>{{ section.settings.heading_2 }}</h3>
	<ul>
		{%- for block in section.blocks -%}
		<li class="p-text"><span>{{ block.settings.number_of_items }}</span>{{ block.settings.box_item }}</li>
		{% endfor %}
	</ul>
</div>
</div>




{% schema %}
{
	"settings": [
	{
		"type": "text",
		"id": "heading",
		"label": "Heading",
		"default": "Features"
	},
	{
		"type": "text",
		"id": "heading_2",
		"label": "Heading 2",
		"default": "In the box"
	},
	{
		"type": "text",
		"id": "features_text",
		"label": "Features text"
	}
	,
	{
		"type": "text",
		"id": "features_text_2",
		"label": "Features text 2"
	}
  ],
	"blocks": [
	{
		"type": "in_box",
		"name": "Text",
		"settings": [
			{
				"type": "text",
				"id": "number_of_items",
				"label": "Number of items"
			},
			{
				"type": "text",
				"id": "box_item",
				"label": "Box item"
			}
		]
	}
	],
	"presets": [
		{
			"name":"Box items"
		}
	]
}
{% endschema %}

